{
    "manifest_version": 2,
    "default_locale": "en",

    "name": "DEFINITY",
    "description": "This extension will analyze a page, and show up if any fake news is detected",
    "version": "1.0",

    "icons": {
        "36": "images/36.png",
        "48": "images/48.png",
        "96": "images/96.png",
        "128": "images/128.png",
        "256": "images/256.png"
    },

    "background": {
        "scripts": [ "js/background.js" ],
        "persistent": false
    },

    "content_scripts": [{
        "js": [ "js/content.js" ],
        "matches": [ "*://example.com/*" ],
        "run_at" : "document_end",
        "all_frames" : false
    }],

    "browser_action": {
        "default_popup": "popup.html",
        "default_title": "DEFINITY",
        "default_icon": {
            "36": "images/36.png",
            "48": "images/48.png",
            "72": "images/72.png",
            "128": "images/128.png"
        }
    },

    "permissions": [ "tabs"]
}
